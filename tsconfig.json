{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": ["esnext"],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "declarationDir": "dist/types",
    "declaration": true
  },
  "include": ["src"]
}
